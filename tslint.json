{
	"extends": "tslint:recommended",
	"rules": {
		"no-console": [false],
		"indent": [true, "tabs", 4],
		"trailing-comma": [true, {
			"multiline": {
				"objects": "never"
			},
			"esSpecCompliant": true,
			"singleline": "never"
		}],
		"no-var-requires": false,
		"curly": [true, "ignore-same-line"],
		"interface-name": false,
		"interface-over-type-literal": false
	}
}