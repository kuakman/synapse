{
  "name": "synapse",
  "version": "1.0.0",
  "description": "Agnostic CLI tool that automates pipeline flow via commands for web development",
  "main": "bin/synapse",
  "bin": {
    "synapse": "bin/synapse"
  },
  "scripts": {
    "dev": "cross-env DEBUG=synapse:dev NODE_ENV=dev nodemon lib/synapse.es6 -- clean --all",
    "test": "cross-env DEBUG=synapse:* NODE_ENV=test _mocha --opts mocha.opts -w test/unit/**/*.spec.es6",
    "it": "cross-env DEBUG=synapse:* NODE_ENV=test _mocha --opts mocha.opts test/integration/**/*.spec.es6",
    "coverage": "cross-env NODE_ENV=test nyc mocha --opts mocha.opts test/unit/**/*.spec.es6",
    "release": "babel-node ./release.es6"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "extension": [
      ".es6"
    ],
    "temp-dir": ".cache",
    "report-dir": "coverage",
    "cache": true,
    "sourceMap": true,
    "instrument": false
  },
  "files": [
    "bin",
    "lib",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:kuakman/synapse.git"
  },
  "keywords": [
    "cli",
    "pipeline",
    "development-tools"
  ],
  "author": "Patricio Ferreira <3dimentionar@gmail.com>",
  "license": "UNLICENSED",
  "nodemonConfig": {
    "watch": [
      "./lib/**/*",
      "./test/**/*",
      "./package.json"
    ],
    "execMap": {
      "es6": "babel-node"
    }
  },
  "devDependencies": {
    "@babel/core": "7.4.0",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.4.2",
    "@babel/register": "7.4.0",
    "babel-plugin-istanbul": "5.1.1",
    "babel-plugin-module-resolver": "3.2.0",
    "chai": "4.2.0",
    "cross-env": "5.2.0",
    "eslint": "5.15.3",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-mocha": "5.3.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "mocha": "6.0.2",
    "nyc": "13.3.0",
    "sinon": "7.3.0"
  },
  "dependencies": {
    "args": "5.0.1",
    "debug": "4.1.1",
    "fs-extra": "7.0.1",
    "json5": "2.1.0",
    "micro": "9.3.3",
    "nodemon": "1.18.10",
    "nunjucks": "3.2.0",
    "plugin-typescript": "8.0.0",
    "rollup": "1.6.0",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-includepaths": "0.2.3",
    "rollup-plugin-node-resolve": "4.0.1",
    "serve-handler": "5.0.8",
    "supports-color": "6.1.0",
    "systemjs": "3.0.1",
    "systemjs-hmr": "2.0.9",
    "underscore": "1.9.1"
  }
}
