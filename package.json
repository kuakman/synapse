{
  "name": "backbone-idom",
  "version": "1.0.0",
  "description": "Backbone Incremental Dom Prototype",
  "main": "main.ts",
  "scripts": {
    "test": "ts-node --project tsconfig-tasks.json main.ts --env=dev",
    "dev": "ts-node --project tsconfig-tasks.json main.ts --env=dev",
    "prod": "ts-node --project tsconfig-tasks.json main.ts --env=prod",
    "build": "ts-node --project tsconfig-tasks.json main.ts --env=build"
  },
  "project": {
    "source": "./src",
    "target": "./public",
    "plugins": [
      {
        "name": "includepaths",
        "options": {
          "include": {
            "systemjs": "./node_modules/systemjs/dist/system.js"
          }
        }
      },
      {
        "name": "node-resolve",
        "options": {
          "module": true,
          "jsnext": true,
          "main": true,
          "browser": true
        }
      },
      {
        "name": "commonjs",
        "options": {
          "include": "node_modules/**"
        }
      }
    ],
    "html": {
      "pattern": "**/*",
      "srcExtesion": ".nunjucks",
      "outExtension": ".html"
    },
    "test": {
      "libs": [
        "js/libraries/libraries-test.ts",
        "js/libraries/libraries-dev.ts",
        "js/libraries/libraries.ts"
      ],
      "output": {
        "format": "system"
      }
    },
    "dev": {
      "libs": [
        "js/libraries/libraries-dev.ts",
        "js/libraries/libraries.ts"
      ],
      "output": {
        "format": "system"
      }
    },
    "prod": {
      "libs": [
        "js/libraries/libraries.ts"
      ],
      "output": {
        "format": "system"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "none"
  },
  "keywords": [
    "backbone",
    "incremental-dom"
  ],
  "author": "Patricio Ferreira <3dimentionar@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/args": "3.0.0",
    "@types/backbone": "1.3.46",
    "@types/fs-extra": "5.0.5",
    "@types/incremental-dom": "0.5.0",
    "@types/jquery": "3.3.29",
    "@types/node": "11.11.0",
    "@types/nunjucks": "3.1.1",
    "@types/systemjs": "0.20.6",
    "@types/underscore": "1.8.13",
    "args": "5.0.1",
    "colors": "^1.3.3",
    "fs-extra": "7.0.1",
    "nunjucks": "3.2.0",
    "rollup": "1.6.0",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-includepaths": "0.2.3",
    "rollup-plugin-node-resolve": "4.0.1",
    "serve-handler": "5.0.8",
    "ts-node": "8.0.3",
    "tslint": "5.13.1",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "backbone": "1.4.0",
    "incremental-dom": "0.6.0",
    "jquery": "3.3.1",
    "systemjs": "3.0.1",
    "underscore": "1.9.1"
  }
}
