{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "standard",
    "globals": {
        "assert": true,
        "sinon": true,
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", "tab"],
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "no-spaced-func": "off",
        "space-before-function-paren": "off",
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "lines-between-class-members": ["error", "always"]
    }
}
